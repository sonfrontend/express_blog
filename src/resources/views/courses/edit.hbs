<div class="m-4">
    <h3 class="text-center">Chỉnh sửa khóa học</h3>
    <form class="m-4" method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" name="name" value="{{course.name}}" id="name"
                aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea row="5" type="text" class="form-control" name="description"
                id="description">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Hình ảnh</label>
            <input type="text" class="form-control" name="videoId" value="{{course.videoId}}" id="videoId">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Cấp độ</label>
            <input type="text" class="form-control" name="level" value="{{course.level}}" id="level">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>